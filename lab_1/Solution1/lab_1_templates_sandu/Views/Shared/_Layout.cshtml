            <a href="#" class="btn btn-outline-primary d-block mb-2">💰 Plati</a>
            <a href="#" class="btn btn-outline-primary d-block mb-2">🛡️ Termeni si conditii</a>
            <a href="#" class="btn btn-outline-primary d-block mb-2">❓ Cum functioneaza?</a>
            <a href="#" class="btn btn-outline-primary d-block mb-2">🥇 Despre noi</a>
            <a href="#" class="btn btn-outline-primary d-block mb-2">📞 Contact</a>
            <img src="https://us.123rf.com/450wm/medvedsky/medvedsky1903/medvedsky190300230/121225948-almaty-kazakhstan-march-28-ford-mustang-v8-5-0l-luxury-stylish-car-on-dark-black-background-3d.jpg?ver=6"/>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My rentcar web site on ASP.NET</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @Scripts.Render("~/bundles/js")
</body>
</html>