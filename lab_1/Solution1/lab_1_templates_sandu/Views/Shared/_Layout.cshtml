@using System.Web.Optimization
@model lab_1_templates_sandu.Models.Person
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Rent p2p</title>
   
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    @Styles.Render("~/bundles/css")
</head>
<body>


    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#"><span style="color:dodgerblue;font-size:30px;">Rent</span><span>Moldova</span></a>
            <button class="btn btn-primary m-3" id="buton_menu" type ="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar">
